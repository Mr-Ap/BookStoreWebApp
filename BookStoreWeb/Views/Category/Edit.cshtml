@model Category
<div class="container p-3">
    <form method="post" asp-action="edit">
      <fieldset>
        <legend>Update Category</legend>
        <div asp-validation-summary="All"></div>
        <div class="form-group row mb-3">
          <label asp-for="Name" class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Category Name">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row" mb-3>
          <label asp-for="DisplayOrder" class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="DisplayOrder" placeholder="Enter Display Number">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn-link ms-lg-1">Go to List</a>
       
      </fieldset>
    </form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
</div>
